class Solution {
    public boolean isValid(String s) {
        Stack<Character> st=new Stack<>();
        for(char ch:s.toCharArray()){
            if(ch=='('||ch=='{' ||ch=='['){
                st.push(ch);
            }
            else if( ch==')' && !st.isEmpty() && st.peek()=='('){
                st.pop();
            }
            else if( ch=='}' && !st.isEmpty() && st.peek()=='{'){
                st.pop();
            }
            else if( ch==']' && !st.isEmpty() && st.peek()=='['){
                st.pop();
            }
            else st.push(ch);
        }
        if(st.isEmpty()) return true;
        else return false;
    }
}//can be optimized 
